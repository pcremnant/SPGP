<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flips : 0"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="restart"
            android:onClick="onBtnRestart"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/card_00"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_01"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_02"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_03"
            style="@style/styleImageButton"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/card_10"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_11"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_12"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_13"
            style="@style/styleImageButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/card_20"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_21"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_22"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_23"
            style="@style/styleImageButton"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/card_30"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_31"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_32"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_33"
            style="@style/styleImageButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/card_40"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_41"
            style="@style/styleImageButton"
            />
