            android:id="@+id/card_42"
            style="@style/styleImageButton"
            />
        <ImageButton
            android:id="@+id/card_43"
            style="@style/styleImageButton"
            />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>